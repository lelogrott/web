<% provide(:title, 'Configurações') %>
<h1>Configurações</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %><br>

      <%= f.label :email %>
      <%= f.email_field :email %><br>

      <%= f.label :login %>
      <%= f.text_field :login %><br>

      <%= f.label :password %>
      <%= f.password_field :password %><br>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %><br>

      <%= f.label :sobre %>
      <%= f.text_area :sobre %><br>

      <%= f.label :perfil_privado %>
      <%= f.label(:true, "Sim")%>
      <%= f.radio_button(:privado, true) %>
      <%= f.label(:true, "Não")%>
      <%= f.radio_button(:privado, false) %> <br>

      <%= f.label :avatar %><br>
      <%= f.file_field :avatar %><br>

      <%= f.submit "Salvar alterações", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>